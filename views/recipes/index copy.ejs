<%- include('../layouts/header.ejs'); -%>

<h5>List recipes</h5>

<table class="table table-bordered border-primary">
  <thead>
    <tr>
      <th class="text-center">No</th>
      <th class="text-center">Name</th>
      <th class="text-center">Description</th>
      <th class="text-center">Preparation Time</th>
      <th class="text-center">Cooking Time</th>
      <th class="text-center col-md-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(recipe => { %>
    <tr>
      <td class="text-center"><%= recipe.id %></td>
      <td><%= recipe.name %></td>
      <td><%= recipe.description %></td>
      <td class="text-center"><%= recipe.preparation_time %></td>
      <td class="text-center"><%= recipe.cooking_time %></td>
      <td class="text-center">
        <a
          class="btn btn-sm btn-danger del"
          href="/recipes/delete/<%= recipe.id %>"
        >
          <i class="fa-solid fa-trash me-2"></i>Delete
        </a>
        <a
          class="btn btn-sm btn-info"
          href="/recipes/update/<%= recipe.id %>"
        >
          <i class="fa-solid fa-pencil me-2"></i>
          Update
        </a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../layouts/footer.ejs'); -%>
